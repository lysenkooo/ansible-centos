[Unit]
Description={{ app_name }} sidekiq
After=network.target

[Service]
User={{ user }}
EnvironmentFile={{ app_current_path }}/.env
WorkingDirectory={{ app_current_path }}
ExecStart=/usr/local/rvm/wrappers/default/bundle exec sidekiq
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target
