[Unit]
Description={{ app_name }}
After=network.target

[Service]
User={{ user }}
EnvironmentFile={{ app_current_path }}/.env
WorkingDirectory={{ app_current_path }}
ExecStart=/usr/local/rvm/wrappers/default/bundle exec rails s -e production -p 3000
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target
